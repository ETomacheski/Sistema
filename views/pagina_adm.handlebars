	</footer>


</div>


<!-- Cadastro de ligações -->


<div class="w3-container">
  
 

  <div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">

      <div class="w3-center"><br>
        <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-xlarge w3-hover-red w3-display-topright" title="Close Modal">&times;</span>
        
      </div>

			<form method="POST" action="/usuario/add_ligacao" >

				<label for="NE">Numero de entrada:</label>
				<input type="Numero" name="numero_entrada" id="NE" class="w3-input w3-border w3-margin-bottom">

				<label for="NS">Numero de Saida:</label>
				<input type="Numero" name="numero_saida" id="NS" class="w3-input w3-border w3-margin-bottom">
				
				<label for="OE">Operadora de Entrada:</label>
				<select id="OE" name="operadora_entrada" class="w3-input w3-border w3-margin-bottom">>
					<option value="oi">
						Oi = 1,2 R$ por minuto
					</option>
					<option value="vivo">
						Vivo = 0,8 R$ por minuto
					</option>
					<option value="claro">
						Claro = 1,00 R$ por minuto
					</option>
					<option value="tim">
						Tim = 0,9 R$ por minuto
					</option>
				</select>

				<label for="OS">Operadora de Saida:</label>
				<select id="Os" name="operadora_saida" class="w3-input w3-border w3-margin-bottom">>
					<option value="oi">
						Oi = 1,2 R$ por minuto
					</option>
					<option value="vivo">
						Vivo = 0,8 R$ por minuto
					</option>
					<option value="claro">
						Claro = 1,00 R$ por minuto
					</option>
					<option value="tim">
						Tim = 0,9 R$ por minuto
					</option>

				</select>

				<label for="tempo">Tempo de duração da ligação:</label>
				<input type="number" name="tempo" id="tempo" class="w3-input w3-border w3-margin-bottom">

				<div class="modal-footer d-flex justify-content-center">
						<button type = "submit" class="btn btn-default"  class="w3-btn w3-round-large cor">Cadastrar</button>
				</div>
			</form>

      

    </div>
  </div>
</div>

  <script>
  // Get the modal
  var modal = document.getElementById('id01');

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
      if (event.target == modal) {
          modal.style.display = "none";
      }
  }
  </script>
</div>


